#!/bin/bash - 
if [ ! -z "$1" ] ; then
    IP=`aws ec2 describe-instances --region eu-central-1 --profile rm | grep PublicIp | tail -1 | sed -e 's/.*PublicIp":[^\"]*"\([^"]*\).*/\1/g'`
    (cat /etc/hosts | grep -v remote-dev-server-riskmatch; echo "$IP remote-dev-server-riskmatch") > /tmp/hosts.new && cat /tmp/hosts.new > /etc/hosts
    ssh ubuntu@$IP -i ~/.ssh/remote-dev-server.pem -t "(cat /etc/hosts | grep -v remote-dev-server-riskmatch; echo '$IP remote-dev-server-riskmatch') > /tmp/hosts.new && cat /tmp/hosts.new > /etc/hosts; riskmatch"
else
    cd ~/K/risk
    TMUX_SESSION="dev_riskmatch@$HOSTNAME"
    tmux -CC attach -t $TMUX_SESSION || tmux -CC new-session -d -s $TMUX_SESSION -n 'vim' -c "$PWD" \;\
         new-window -n 'MS' -c "$PWD/backend/master-site" \;\
         new-window -n 'MW' -c "$PWD/backend/master-worker" \;\
         new-window -n 'BS' -c "$PWD/backend/broker-site" \;\
         new-window -n 'BW' -c "$PWD/backend/broker-worker" \;\
         new-window -n 'CS' -c "$PWD/backend/carrier-site" \;\
         new-window -n 'CW' -c "$PWD/backend/carrier-worker" \;\
         new-window -n 'MySQL' \;\
         new-window -n 'backend-v2' -c "$PWD/backend-v2" \;\
         send-keys -t $TMUX_SESSION:0 'vim' C-m \;\
         send-keys -t $TMUX_SESSION:7 'mysql -u root' C-m \;\
         select-window -t "$TMUX_SESSION:0" \;\
         attach
fi
